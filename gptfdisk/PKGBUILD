build() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver}

  make prefix=/usr BASEDIR="${pkgdir}" install
  install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
